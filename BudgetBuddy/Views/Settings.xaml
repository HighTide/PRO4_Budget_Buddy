<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetBuddy.Views.Settings"
             Title="Settings" 
             BackgroundColor="{DynamicResource backgroundColor}"
             Style="{DynamicResource backgroundStyle}">
    <ContentPage.ToolbarItems>
       <!--<ToolbarItem x:Name="doneButton" Text="Name" Clicked="doneButton_Clicked" />-->
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Button TextColor="{DynamicResource textColor}" Text="Light Theme" Clicked="Button_Clicked1" />
            <Button TextColor="{DynamicResource textColor}" Text="Dark Theme" Clicked="Button_Clicked2" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>