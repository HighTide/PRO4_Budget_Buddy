<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetBuddy.Views.Settings"
             Title="Settings"
             BackgroundColor="{DynamicResource backgroundColor}"
             Style="{DynamicResource backgroundStyle}">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="doneButton" Text="Name" Clicked="doneButton_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20">
            <Label Style="{DynamicResource labelStyle}" Text = "Background Color:" />
            <Entry x:Name="backgroundColorEntry" />
            <Label Style="{DynamicResource labelStyle}" Text = "Text Color:" />
            <Entry x:Name="textColorEntry" />
            <Button TextColor="{DynamicResource textColor}" Text="Apply Theme!" Clicked="Button_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>