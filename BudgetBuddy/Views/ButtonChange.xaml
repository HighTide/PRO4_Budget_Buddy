<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetBuddy.Views.ButtonChange"
             Title="Knoppen fast access bar"
             BackgroundColor="{DynamicResource backgroundColor}">
    <ContentPage.Content>
        <StackLayout>
            
            <Label HorizontalOptions="Center" Text="Verander knop 1" TextColor="{DynamicResource textColor}"/>
            <Picker Title="verander knop 1" HorizontalOptions="CenterAndExpand" x:Name="knop1" BackgroundColor="{DynamicResource entryColor}">
                <Picker.Items>
                    <x:String>Inkomsten</x:String>
                    <x:String>Uitgaven</x:String>
                    <x:String>Spaardoelen</x:String>
                    <x:String>Spaardoel toevoegen</x:String>
                    <x:String>Overzicht</x:String>
                    <x:String>Totaal Overzicht</x:String>
                    <x:String>Budget</x:String>
                    <x:String>Settings</x:String>
                </Picker.Items>
            </Picker>
            <Button BorderColor="Bisque" Margin="5" BorderWidth="2" Text="Verander knop 1" Clicked="Button_OnClicked1" TextColor="{DynamicResource textColor}"  BackgroundColor="{DynamicResource buttonColor}"></Button>
            <Label HorizontalOptions="Center" Text="Verander knop 2" TextColor="{DynamicResource textColor}"/>
