<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetBuddy.Views.Uitgaven"
             Title="Uitgaven">
    <StackLayout Orientation="Vertical" Padding="20">
        <Label HorizontalOptions="Center" VerticalOptions="Center" Text="Uitgaven toevoegen" />
        <Label Text="" />
        <StackLayout Orientation="Horizontal">
            <Label VerticalOptions="End" Text="Bedrag" />
            <Entry VerticalOptions="End" Placeholder="Wat heb je aangeschaft?" x:Name="Naam"/>
            <Entry VerticalOptions="End" Placeholder="Bedrag" Keyboard="Numeric" x:Name="Bedrag"/>
        </StackLayout>
        <BoxView x:Name="Ruimte" HeightRequest="20" />
        <Label Text="" />
        <StackLayout Orientation="Horizontal">
            <Label VerticalOptions="Center" Text="Categorie" />
            <Picker Title="Categorie" VerticalOptions="Center" x:Name="Category">
                <Picker.Items>
                    <x:String>Kleding</x:String>
                    <x:String>Drinken</x:String>
                    <x:String>Eten</x:String>
                    <x:String>Boodschappen</x:String>
                    <x:String>Amusement</x:String>
                    <x:String>Abonnementen</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>
        <StackLayout>
            <Button Text="Voeg Toe" VerticalOptions="CenterAndExpand" Clicked="Button_OnClicked"> 
            </Button>
        </StackLayout>
    </StackLayout>
</ContentPage>