    <ContentPage.Content>
        <StackLayout Spacing="0"
                     Margin="10"
                     BackgroundColor="ForestGreen"
                     IsVisible="True">
            
            <BoxView Color="Orange"
                     HorizontalOptions="FillAndExpand"
                     HeightRequest="100"
                     VerticalOptions="Start"/>
            
            <Button BorderRadius="30" HeightRequest="60" WidthRequest="60"
                    BackgroundColor="Red" HorizontalOptions="Center" VerticalOptions="Start" />
            
            <Label x:Name="days_left"
               Style="{DynamicResource TitleStyle}"
               FontSize="Large"
               FontAttributes="Bold"/>
            
            <BoxView Color="Bisque"
                     HorizontalOptions="FillAndExpand"
                     HeightRequest="30"
                     VerticalOptions="End"/>

            <Label Text="Datum:"
               Style="{DynamicResource TitleStyle}"
               FontSize="Medium"
               FontAttributes="Bold"/>

            <Label Text="Naam:"
               Style="{DynamicResource SubtitleStyle}"
               FontSize="Medium"
               FontAttributes="Bold"/>

            <Label Text="Bedrag:"
               Style="{DynamicResource SubtitleStyle}"
               FontSize="Medium"
               FontAttributes="Bold"/>

            <Button x:Name="Button1"
                FontSize="11"
                Clicked="Button_Pressed1"
                BackgroundColor="Orange"
                TextColor="White"/>

            <Button x:Name="Button3"
                FontSize="11"
